{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "todo-app",
  "version": "0.1.0",
  "identifier": "com.todo.app.herrcai0907",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "todo-app",
        "width": 400,
        "height": 800,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"]
  }
}
